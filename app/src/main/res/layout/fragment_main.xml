<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/countArea"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@color/red_500"
        android:elevation="5dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextSwitcher
            android:id="@+id/timer_textSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/timer_textView"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:max="5"
            android:progress="0" />

        <ImageButton
            android:id="@+id/settingsButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="?android:selectableItemBackground"
            android:padding="0dp"
            android:src="@drawable/ic_settings_white_24dp" />

        <ImageButton
            android:id="@+id/deleteButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/settingsButton"
            android:background="?android:selectableItemBackground"
            android:padding="0dp"
            android:src="@drawable/ic_delete_white_24dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/secondaryArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/countArea"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="This is some text" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondaryArea"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/ic_play" />

</RelativeLayout>